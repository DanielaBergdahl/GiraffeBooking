@model GiraffeBooking.Models.ViewModels.CreateBookingViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create booking</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label class="control-label">Your name</label>
                <input class="form-control" asp-for="Booking.UserName" />
                <span asp-validation-for="Booking.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Giraffe</label>
                <select class="form-control" asp-for="Booking.GiraffeId"
                        asp-items="@(new SelectList(Model.Giraffes, "Id","Name"))">
                    <option>Select giraffe</option>
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Booked date</label>
                <input class="form-control" asp-for="Booking.BookedDate" />
                <span asp-validation-for="Booking.BookedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="custom-control-label">Email</label>
                <input class="form-control" asp-for="Booking.Email" />
                <span asp-validation-for="Booking.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}<!--Gör själva valideringen-->
}
