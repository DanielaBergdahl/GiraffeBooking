@model IEnumerable<GiraffeBooking.Models.Booking>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "List of bookings";
}

<h1>All bookings at Giraffe Booker</h1>
<p>
    <a asp-action="Create">Make a new booking</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Giraffe
            </th>
            <th>
                Booked date
            </th>
            <th>
                Booker
            </th>
            <th>
                Your email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.GiraffeName </td>
                <td>@booking.BookedDate</td>
                <td>@booking.UserName</td>
                <td>@booking.Email</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@booking.Id">Delete</a>
                    <a asp-action="Edit" asp-route-id="@booking.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>



</table>

